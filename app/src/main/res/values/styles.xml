<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/light_background</item>
    </style>

    <style name="ItemFilter" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:layout_marginLeft">@dimen/activity_big_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_middle_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_middle_margin</item>
    </style>

    <style name="CircleWithNumber">
        <item name="android:layout_width">@dimen/circle</item>
        <item name="android:layout_height">@dimen/circle</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/background_circle_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_background</item>
    </style>

    <style name="hashtag_background_gray" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_rounded_gray</item>
        <item name="android:paddingLeft">@dimen/activity_small_margin</item>
        <item name="android:paddingBottom">@dimen/activity_ultra_small_margin</item>
        <item name="android:paddingTop">@dimen/activity_ultra_small_margin</item>
        <item name="android:paddingRight">@dimen/activity_small_margin</item>
        <item name="android:textColor">@color/light_background</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">@dimen/activity_middle_margin</item>
        <item name="android:paddingRight">@dimen/activity_middle_margin</item>
        <item name="android:textColor">@color/light_background</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonBorderGray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/button_border_gray</item>
        <item name="android:paddingLeft">@dimen/activity_middle_margin</item>
        <item name="android:paddingRight">@dimen/activity_middle_margin</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ButtonAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/background_rounded_light_gray</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingRight">@dimen/activity_middle_margin</item>
        <item name="android:paddingLeft">@dimen/activity_small_margin</item>
        <item name="android:drawablePadding">@dimen/activity_ultra_small_margin</item>
        <item name="android:drawableLeft">@drawable/add</item>
    </style>

    <style name="ItemPhoto">
        <item name="android:layout_width">@dimen/avatar_big</item>
        <item name="android:layout_height">@dimen/avatar_big</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TitleBlack" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBold</item>
        <item name="android:textSize">@dimen/text_title_call</item>
    </style>

    <style name="TextBlue" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextGray" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">@dimen/text_call_status</item>
    </style>

    <style name="ItemChat" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:background">@drawable/background_rounded_white</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:elevation">@dimen/margin_very_small</item>
    </style>

    <style name="ButtonNewChat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">@dimen/margin_big</item>
        <item name="android:background">@drawable/circle_white</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:elevation">@dimen/margin_very_small</item>
    </style>





    <style name="TextNormal" parent="android:TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBold</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextNormal.Gray">
        <item name="android:textColor">@color/colorTextNormalGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormal.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextNormal.Gray.Big">
        <item name="android:textColor">@color/colorTextNormalGray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextNormal.Gray.Bold">
        <item name="android:textColor">@color/colorTextNormalGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal.White">
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonGroup" parent="TextNormal.White">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:background">@drawable/background_rounded_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_background</item>
    </style>

    <style name="ButtonGroup.NoActive" parent="TextNormal.White">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:background">@drawable/button_border_corner_right_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
