<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_above="@+id/iv_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/holder_intro"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/super_big_margin"
        android:src="@drawable/pic_first"/>

    <TextView
        style="@style/NewHeaderText.White"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/super_big_margin"
        android:text="@string/text_intro1"
        android:textAlignment="center"/>

</RelativeLayout>