<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000">

    <TextView
        android:id="@+id/tvPrivateChat"
        style="@style/ItemChat"
        android:layout_marginTop="260dp"
        android:text="@string/private_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCreateGroup"
        style="@style/ItemChat"
        android:layout_marginTop="@dimen/margin_big"
        android:text="Создать группу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrivateChat" />

    <TextView
        android:id="@+id/tvGetInGroup"
        style="@style/ItemChat"
        android:layout_marginTop="@dimen/margin_big"
        android:text="Присоединиться к группе"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateGroup" />

    <ImageView
        android:id="@+id/ivEdit"
        app:layout_constraintBottom_toBottomOf="@+id/tvPrivateChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPrivateChat"
        app:srcCompat="@drawable/ic_edit"
        style="@style/ButtonNewChat" />

    <ImageView
        android:id="@+id/ivCreateGroup"
        style="@style/ButtonNewChat"
        app:layout_constraintBottom_toBottomOf="@+id/tvCreateGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCreateGroup"
        app:srcCompat="@drawable/ic_group_add" />

    <ImageView
        android:id="@+id/ivGetInGroup"
        style="@style/ButtonNewChat"
        app:layout_constraintBottom_toBottomOf="@+id/tvGetInGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGetInGroup"
        app:srcCompat="@drawable/ic_group_get" />


    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/big_button_close"
        android:layout_height="@dimen/big_button_close"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/circle_blue"
        android:elevation="@dimen/margin_very_small"
        android:padding="@dimen/padding_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGetInGroup"
        app:srcCompat="@drawable/ic_close_" />

</android.support.constraint.ConstraintLayout>